import java.awt.*;
import java.awt.event.*;
import javax.swing.*;
import javax.imageio.*;
 
public class glowny  
{  
  public glowny()  
  {  
    Frame f= new Frame("Canvas Example");  
    f.add(new MyCanvas());  
    f.setLayout(null);  
    f.setSize(400, 400);  
    f.setVisible(true);  
    
  }  
  public static void main(String args[])  
  {  
    new glowny(); 
    chemik Mando=new chemik();
    System.out.println("srodek_x"+Mando.srodek_x);
  }  
}  
class MyCanvas extends Canvas  
{  
        public MyCanvas() {  
        setBackground (Color.GRAY);  
        setSize(300, 200);  
     }  
  public void paint(Graphics g)  
  {  
    g.setColor(Color.red);  
    g.fillOval(0, 75, 150, 75);  
  }  
}    
